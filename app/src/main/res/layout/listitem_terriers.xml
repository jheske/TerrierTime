<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <!-- See TerriersRvAdapter.kt for bindingings
    to this layout and all its Views -->
    <data>
        <variable
                name="terrier"
                type="com.heske.terriertime.database.Terrier"/>
        <variable
                name="guess"
                type="String"/>
    </data>
    <androidx.cardview.widget.CardView
            android:id="@+id/card_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            app:cardBackgroundColor="@color/colorDivider"
            app:cardElevation="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/img_photo"
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:contentDescription="@string/app_name"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/terrier_placeholder"
                    app:terrierImageUrl="@{terrier.name}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/tv_fun_fact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="@{terrier.fact}"
                    tools:text="@string/airedale_fact"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_photo"/>

            <TextView
                    android:id="@+id/tv_guess"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_small"
                    tools:text="@string/txt_guess"
                    android:textSize="@dimen/main_text_size"
                    android:textStyle="bold"
                    android:text="@string/txt_guess"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_fun_fact"/>
            <EditText
                    android:id="@+id/et_guess_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    tools:text="@string/txt_guess"
                    android:ems="20"
                    android:text="@{guess}"
                    android:hint="@string/txt_guess_hint"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_guess"/>
            <Button
                    android:id="@+id/btn_guess"
                    android:text="@string/txt_btn_guess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_give_up"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    app:layout_constraintTop_toBottomOf="@+id/et_guess_txt"/>
            <Button
                    android:id="@+id/btn_give_up"
                    android:text="@string/txt_btn_give_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/btn_guess"
                    app:layout_constraintStart_toEndOf="@+id/btn_guess"
                    app:layout_constraintEnd_toStartOf="@+id/btn_more"/>
            <Button
                    android:id="@+id/btn_more"
                    android:text="@string/txt_btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@+id/btn_give_up"
                    app:layout_constraintStart_toEndOf="@+id/btn_give_up"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>