<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/navigation" app:startDestination="@id/splashFragment">


    <fragment android:id="@+id/splashFragment"
              android:name="com.heske.terriertime.fragments.SplashFragment"
              android:label="SplashFragment">
        <action android:id="@+id/action_splashFragment_to_breedFragment"
                app:destination="@id/breedFragment"/>
    </fragment>

    <fragment android:id="@+id/breedFragment"
              android:name="com.heske.terriertime.fragments.TerrierFragment"
              android:label="BreedFragment">
        <action android:id="@+id/action_breedFragment_to_detailFragment"
                app:destination="@id/detailFragment"/>
    </fragment>

    <fragment android:id="@+id/detailFragment"
              android:name="com.heske.terriertime.fragments.DetailFragment"
              android:label="DetailFragment"/>
</navigation>